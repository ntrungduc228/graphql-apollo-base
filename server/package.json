{
	"name": "graphql-apollo-base",
	"version": "0.0.1",
	"main": "index.js",
	"nodemonConfig": {
		"verbose": true,
		"ext": "js, json, jsx, ts, tsx, graphql, gql, yaml",
		"watch": [
			"src/*",
			".env",
			"node_modules/*"
		],
		"ignore": [],
