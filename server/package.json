		"express": "^4.18.2",
		"graphql": "^16.8.1",
		"helmet": "^7.1.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.6",
		"nodemon": "^3.0.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	}
}
